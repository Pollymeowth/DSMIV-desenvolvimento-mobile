datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   // "admin" | "professor" | "aluno"
  courseId  Int?
  course    Course?  @relation(fields: [courseId], references: [id])
  createdAt DateTime @default(now())
}

model Course {
  id          Int      @id @default(autoincrement())
  name        String
  area        String?
  duration    Int?     // n√∫mero de semestres
  coordinator String?
  createdAt   DateTime @default(now())

  users User[]
}
